<?xml version='1.0' encoding='utf-8'?>
<widget id="app.hoodmode.co" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hoodmode</name>
    <description>
        Bringing musical modality to ya hood.
    </description>
    <author email="li.mikael@gmail.com" href="http://cordova.io">
        Mikael Lindqvist
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

	<gap:plugin name="com.phonegap.plugin.statusbar" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <hook type="before_prepare" src="hooks/bundle.sh" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

	<preference name="StatusBarOverlaysWebView" value="false" />
</widget>
